%li.dropdown.current-user
  %a{ href: user_url(current_user.id), data: { toggle: 'dropdown' } }
    .gravatar.xs
      %img{ src: gravatar_url(current_user.email, 32) }
    = current_user.name
    %b.caret

  %ul.dropdown-menu
    - if current_user.verified?
      %li
        %a{ href: dashboard_url } Dashboard
        %a{ href: edit_user_url } Your Settings
    - else
      %li
        %a{ href: '' } Resend Email Verification
    %li.divider
    %li
      %a{ href: logout_url } Logout